apiVersion: v1
kind: DeploymentConfig
metadata: 
  name: alertmanager-check-config
spec: 
  replicas: 1
  selector: 
    app: alertmanager-check-config
  strategy: 
    activeDeadlineSeconds: 700
    resources: {}
    rollingParams: 
      intervalSeconds: 1
      maxSurge: 25%
      maxUnavailable: 25%
      timeoutSeconds: 600
      updatePeriodSeconds: 1
    type: Rolling
  template: 
    metadata: 
      creationTimestamp: ~
      labels: 
        app: alertmanager-check-config
    spec: 
      containers: 
        - image: getupcloud/alertmanager-check-config
          imagePullPolicy: Always
          name: alertmanager-check-config
          resources: 
            limits: 
              cpu: 100m
              memory: 512Mi
            requests: 
              cpu: 10m
              memory: 128Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts: 
            - mountPath: /config
              name: config
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      terminationGracePeriodSeconds: 30
      triggers: 
        - type: ConfigChange
      volumes: 
        - configMap: 
            defaultMode: 420
            name: alertmanager
          name: config
